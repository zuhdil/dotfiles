# define prefix
unbind C-b
set -g prefix C-s

# send prefix to other application
bind C-s send-prefix

# pane split's on current directory
bind % split-window -h -c "#{pane_current_path}"
bind '"' split-window -v -c "#{pane_current_path}"

# move between panes
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# resize panes
bind -r H resize-pane -L 2
bind -r J resize-pane -D 2
bind -r K resize-pane -U 2
bind -r L resize-pane -R 2

# integrates X clipboard/selection with the current tmux selection
bind -t vi-copy y copy-pipe "xclip -i -sel clip > /dev/null"
bind p run "xclip -o -sel clip | tmux load-buffer -"

# vi mode for working with buffer
setw -g mode-keys vi

# minimize delay so its much more responsive
set -sg escape-time 1

# enable 256 colors
set -g default-terminal "screen-256color"

# window index start from 1 instead of 0
set -g base-index 1

# pane also start from 1 for consistency
setw -g pane-base-index 1

# notify something happens on other window
setw -g monitor-activity on
set -g visual-activity on

# disable status redrawing at interval
set -g status-interval 0

# theme
set -g status on
set -g status-position top

set -g status-style fg='colour234',bg='colour254'

set -g status-left '#{session_name} '
set -g status-left-style fg='colour254',bg='colour33',bright
set -g status-right ' #{window_index}.#{pane_index}'
set -g status-right-style fg='colour230',bg='colour37'

setw -g window-status-style fg='colour244',dim
setw -g window-status-current-style fg='colour234',bg='colour166'
setw -g window-status-activity-style fg='colour235',bg='colour136'

set -g message-style fg='colour230',bg='colour33',bright
set -g message-command-style fg='colour230',bg='colour37'

setw -g mode-style fg='colour234',bg='colour136'

setw -g pane-border-style fg='colour230'
setw -g pane-active-border-style fg='colour166'


# color reference based on Solarized
# ----------------------------------
# base03    colour234
# base02    colour235
# base01    colour240
# base00    colour241
# base0     colour244
# base1     colour245
# base2     colour254
# base3     colour230
# yellow    colour136
# orange    colour166
# red       colour160
# magenta   colour125
# violet    colour61
# blue      colour33
# cyan      colour37
# green     colour64
